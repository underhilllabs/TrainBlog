%p#notice= notice

- if @post.banner.attached?
  .row
    .col-md-12
      = image_tag @post.banner, size: "800x250"
.main-wrapper    
  %p
    %h2= @post.title

  %p
    %small= "Posted by #{@post.user.player_profile.name}"
    %p.avatar
      = image_tag @post.user.player_profile.avatar
      .content= @post.content
  
  = link_to 'Edit', edit_post_path(@post)
  \|
  = link_to 'Back', posts_path
